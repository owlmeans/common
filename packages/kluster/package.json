{
  "name": "@owlmeans/kluster",
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "dev": "sleep 180 && nodemon -e ts,tsx,json --watch src --exec \"tsc -p ./tsconfig.json\"",
    "watch": "tsc -b -w --preserveWatchOutput --pretty"
  },
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js",
      "module": "./build/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.22.0",
    "@owlmeans/config": "^0.1.2",
    "@owlmeans/context": "^0.1.2",
    "@owlmeans/server-config": "^0.1.2",
    "@owlmeans/server-context": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
