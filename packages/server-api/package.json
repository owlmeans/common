{
  "name": "@owlmeans/server-api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "dev": "sleep 15 && nodemon -e ts,tsx,json --watch src --exec \"tsc -p ./tsconfig.json\"",
    "watch": "tsc -b -w --preserveWatchOutput --pretty"
  },
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js",
      "module": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./utils": {
      "import": "./build/utils/index.js",
      "require": "./build/utils/index.js",
      "default": "./build/utils/index.js",
      "module": "./build/utils/index.js",
      "types": "./build/utils/index.d.ts"
    }
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/middie": "^9.0.2",
    "@owlmeans/api": "^0.1.0",
    "@owlmeans/auth": "^0.1.0",
    "@owlmeans/auth-common": "^0.1.0",
    "@owlmeans/context": "^0.1.0",
    "@owlmeans/error": "^0.1.0",
    "@owlmeans/module": "^0.1.0",
    "@owlmeans/route": "^0.1.0",
    "@owlmeans/server-context": "^0.1.0",
    "@owlmeans/server-module": "^0.1.0",
    "ajv-errors": "^3.0.0",
    "fastify": "^5.0.0",
    "fastify-raw-body": "^5.0.0"
  },
  "peerDependencies": {
    "ajv": "*",
    "ajv-formats": "*"
  },
  "devDependencies": {
    "@types/node": "^22.7.8",
    "nodemon": "^3.1.7",
    "npm-check": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
