{
  "name": "@owlmeans/server-oidc-rp",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "dev": "sleep 36 && nodemon -e ts,tsx,json --watch src --exec \"tsc -p ./tsconfig.json\"",
    "watch": "tsc -b -w --preserveWatchOutput --pretty"
  },
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js",
      "module": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./plugins": {
      "import": "./build/plugins/index.js",
      "require": "./build/plugins/index.js",
      "default": "./build/plugins/index.js",
      "module": "./build/plugins/index.js",
      "types": "./build/plugins/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@owlmeans/auth": "^0.1.0",
    "@owlmeans/basic-envelope": "^0.1.0",
    "@owlmeans/config": "^0.1.0",
    "@owlmeans/context": "^0.1.0",
    "@owlmeans/oidc": "^0.1.0",
    "@owlmeans/resource": "^0.1.0",
    "@owlmeans/server-auth": "^0.1.0",
    "@scure/base": "^1.1.8",
    "jose": "^5.9.2",
    "openid-client": "^5.7.0"
  }
}
