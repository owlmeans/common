{
  "name": "@owlmeans/server-socket",
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "dev": "sleep 324 && nodemon -e ts,tsx,json --watch src --exec \"tsc -p ./tsconfig.json\"",
    "watch": "tsc -b -w --preserveWatchOutput --pretty"
  },
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js",
      "module": "./build/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/connect": "^3.4.38",
    "nodemon": "^3.1.11",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "fastify": "*"
  },
  "dependencies": {
    "@fastify/websocket": "^11.0.1",
    "@owlmeans/auth": "^0.1.2",
    "@owlmeans/basic-envelope": "^0.1.2",
    "@owlmeans/context": "^0.1.2",
    "@owlmeans/module": "^0.1.2",
    "@owlmeans/server-api": "^0.1.2",
    "@owlmeans/server-auth": "^0.1.2",
    "@owlmeans/server-context": "^0.1.2",
    "@owlmeans/server-module": "^0.1.2",
    "@owlmeans/socket": "^0.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
