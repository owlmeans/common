      "require": "./build/index.js",
      "default": "./build/index.js",
      "module": "./build/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "dependencies": {
    "@owlmeans/client": "^0.1.0",
    "@owlmeans/client-module": "^0.1.0",
    "@owlmeans/context": "^0.1.0",
    "@owlmeans/wled": "^0.1.0"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
